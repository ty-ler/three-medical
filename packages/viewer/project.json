{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/viewer/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/viewer",
        "main": "packages/viewer/src/index.ts",
        "tsConfig": "packages/viewer/tsconfig.lib.json",
        "assets": ["packages/viewer/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/viewer/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/viewer"],
      "options": {
        "jestConfig": "packages/viewer/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
